<!-- battery.html -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>وضعیت باتری</title>
  <script>
    async function getBattery() {
      const battery = await navigator.getBattery();
      const level = battery.level * 100;
      Telegram.WebApp.sendData(`🔋 شارژ فعلی: ${level.toFixed(0)}٪`);
      Telegram.WebApp.close();
    }
    window.onload = getBattery;
  </script>
</head>
<body>
  <h2>در حال گرفتن اطلاعات باتری...</h2>
</body>
</html>
